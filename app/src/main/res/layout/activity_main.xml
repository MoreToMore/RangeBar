<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/gray2"
    android:layout_height="match_parent"
    tools:context="com.yangshunfa.rangebar.MainActivity">

    <com.yangshunfa.rangebar.view.RangeBar
        android:id="@+id/rangeBar"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        app:rangeHeight="5dp"
        app:rangeColor="@color/colorPrimary"
        app:textArray="@array/range_array"
        app:sliderDrawable="@drawable/range_slider_icon"
        app:solidBackgroundColor="@color/gray2"
        android:paddingBottom="10dp"
        android:background="@color/gray2"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <Button
        android:text="reset"
        android:onClick="resetClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
